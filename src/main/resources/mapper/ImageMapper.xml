<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.dao.ImageDao">
    <resultMap id="BaseResultMap" type="image" >
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="image_name" property="userName" jdbcType="VARCHAR" />
        <result column="image_img" property="userImg" jdbcType="VARCHAR" />
    </resultMap>
    <!-- 通过id查询用户信息 -->
    <select id="selectById" parameterType="java.lang.Integer" resultType="image">
		select id,iamge_name userName,image_img userImg
		from  image
		where id = #{id}	
	</select>
    <!-- 查询用户信息 -->
    <select id="selectAll" resultType="image">
		select id,image_name userName,image_img userImg from  image
	</select>
    <!-- 添加用户 -->
    <insert id="insertUser" parameterType="image">
		insert into image(image_name, image_img ) values (#{userName},#{userImg})
	</insert>
    <!-- 修改用户 -->
    <update id="updateUser" parameterType="image">
		update image
		set 
		 iamge_name = #{userName},
		 image_img = #{userImg}
		where id = #{id}
	</update>
    <delete id="deleteUser" parameterType="java.lang.Integer">
		delete from image
    	where id = #{id}
	</delete>

</mapper>